@model IEnumerable<NetPress.Models.ProductProperty>

@{
    ViewBag.Title = "Index";
    string CategoryName = ViewBag.CategoryName;
    Guid CategoryId = ViewBag.CategoryId;
}

<h2>@CategoryName</h2>

<p>
    @Html.ActionLink("新增", "Create", new { id = CategoryId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExpandProperty.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCategory.Name)
        </th>
        <th>
            操作
        </th>
</tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ExpandProperty.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCategory.Name)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.ProductPropertyId, categoryId = CategoryId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProductPropertyId, categoryId = CategoryId }) |*@
            @Html.ActionLink("删除", "Delete", new { id = item.ProductPropertyId, categoryId = CategoryId })
        </td>
    </tr>
}

</table>

