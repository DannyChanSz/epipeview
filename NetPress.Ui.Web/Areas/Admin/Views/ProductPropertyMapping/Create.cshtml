@model NetPress.Models.ProductPropertyMapping

@{
    ViewBag.Title = "Create";
    Guid productId = ViewBag.ProductId;
    string error = ViewBag.ErrorMessage == null ? "" : (string)ViewBag.ErrorMessage;
}

<h2>Create</h2>
<input type="hidden" id="hdErrorMsg" value="@error" />
<script src="/Content/js/admin/showErrorMsg.js"></script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ProductPropertyMapping</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">

            @Html.Hidden("ProductId", productId)


        <div class="form-group">
            @Html.LabelFor(model => model.ProductPropertyId, "属性", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ProductPropertyId", String.Empty)
                @Html.ValidationMessageFor(model => model.ProductPropertyId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
        </div>
}

<div>
    @Html.ActionLink("返回", "GetByProductId",new {id=productId})
</div>
