    ViewBag.Title = "Index";
}

<h2>订单管理</h2>

<p>
    @*@Html.ActionLink("分配订单", "ReassignedOrder")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <td>
            @Html.DisplayNameFor(model => model.CustomerNameInfo)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.PhoneInfo)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.AddressInfo)
        </td>
        <th>
            @Html.DisplayNameFor(model => model.OrderState)
        </th>
