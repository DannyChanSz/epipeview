            @Html.DisplayFor(modelItem => item.Customer.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CustomerNameInfo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneInfo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressInfo)
        </td>

        
        <td>
            @Html.DisplayFor(modelItem => item.OrderState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("改价", "Edit", new { id=item.OrderId }) |
            @*@Html.ActionLink("订单明细", "../OrderDetails", new { orderId=item.OrderId })*@
